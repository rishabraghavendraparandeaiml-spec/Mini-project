# Environment Configuration Template
# Copy this file to .env and fill in your actual API keys

# Server Configuration
PORT=3000
NODE_ENV=development

# OpenRouteService API Configuration
# Get your free API key at: https://openrouteservice.org/dev/#/signup
ORS_API_KEY=your_openrouteservice_api_key_here

# OpenWeatherMap API Configuration  
# Get your free API key at: https://openweathermap.org/api
OWM_API_KEY=your_openweathermap_api_key_here

# Map Tile Configuration (Optional)
# You can use OpenStreetMap (free) or Mapbox (requires account)
# For Mapbox, get token at: https://account.mapbox.com/access-tokens/
MAPBOX_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
# MAPBOX_TILE_URL=https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token=YOUR_MAPBOX_TOKEN

# Default Map Center (Optional)
# Set default latitude and longitude for initial map view
DEFAULT_LAT=40.7128
DEFAULT_LNG=-74.0060

# Rate Limiting (Optional)
# Maximum requests per minute per IP
RATE_LIMIT_MAX=100

# Security (Optional)
# Set to 'true' in production for enhanced security
SECURE_COOKIES=false
ENABLE_HTTPS=false

# Logging Configuration (Optional)
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Analytics Configuration (Optional)
# Enable/disable analytics data persistence
ENABLE_ANALYTICS=true
ANALYTICS_FILE=data/analytics.json

# Cache Configuration (Optional)
# Cache duration for API responses in seconds
CACHE_DURATION=300

# CORS Configuration (Optional)
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# External API Timeouts (Optional)
# Timeout for external API calls in milliseconds
ORS_TIMEOUT=10000
OWM_TIMEOUT=8000

# Feature Flags (Optional)
# Enable/disable specific features
ENABLE_WEATHER_ALERTS=true
ENABLE_ROUTE_CACHING=true
ENABLE_GEOLOCATION=true

# Development Configuration (Optional)
# These settings are only used in development mode
DEV_MOCK_APIS=false
DEV_VERBOSE_LOGGING=false
DEV_HOT_RELOAD=true